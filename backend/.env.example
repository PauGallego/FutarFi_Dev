# Runtime
NODE_ENV=development
PORT=3001

# Database
# Local (when running backend outside Docker)
MONGODB_URI=mongodb://admin:password123@localhost:27017/futarfi?authSource=admin
# Docker Compose sets MONGODB_URI to the service host (mongodb) via environment override
# MONGODB_URI=mongodb://admin:password123@mongodb:27017/futarfi?authSource=admin

# Chain config
CHAIN_ID=31337
# In Docker, reach host node via host.docker.internal (compose adds host-gateway)
RPC_URL=http://host.docker.internal:8545
RPC_WS_URL=ws://host.docker.internal:8545
# Test key only; do not use real keys
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
# Optional write protection token for future internal ops
CHAIN_WRITE_TOKEN=change-me

# ProposalManager auto-sync
PROPOSAL_MANAGER_ADDRESS=0x8B4e21F25229076651f843c0a7A7342D844634E7
# Backfill start block (0 = from genesis)
PM_START_BLOCK=0
# Confirmations to wait for events (0 for dev)
PM_CONFIRMATIONS=0

# Poll intervals (milliseconds)
PROPOSALS_SYNC_MS=30000
PROPOSALS_POLL_MS=15000
FILLED_MONITOR_MS=20000

# Optional diagnostics
LOG_LEVEL=info
